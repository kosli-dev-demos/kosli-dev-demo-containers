ARG KOSLI_CLI_VERSION=v0.1.33

# Build Base
FROM ghcr.io/kosli-dev/cli:$KOSLI_CLI_VERSION

RUN curl -sL -o /tmp/oc.tar.gz https://mirror.openshift.com/pub/openshift-v4/clients/ocp/latest/openshift-client-linux.tar.gz &&\
    tar -C /tmp -xf /tmp/oc.tar.gz --no-same-owner && mv /tmp/oc /usr/local/bin && chmod +x /usr/local/bin/oc && rm /tmp/*

RUN wget https://github.com/mikefarah/yq/releases/latest/download/yq_linux_amd64 -O /usr/bin/yq &&\
    chmod +x /usr/bin/yq
